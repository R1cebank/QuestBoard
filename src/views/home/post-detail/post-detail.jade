.fragment#frag-view-post

  h1 {{ post.title }}
  
  include ../celtic-sep.part.jade
  
  .post-owner.clearfix
    img.profile-image.pull-left(qb-no-drag, qb-profile-img = '{{ post.uuid }}')
    .post-greeting.lead(qb-greeting = '{{ post.postid }}')
  
  .post-body
    h2 Objective
    p {{ post.description }}
    h2 Conditions
    p Quest must be completed 
      span.accent {{ post.endDate | ago }}
      |  from now.
    h2 Tags
    div(ng-show = '!post.tags.length')
      i.text-muted Quest owner did not specify any tags.
    div
      span.label.label-primary.label-lg(
        ng-repeat = 'tag in post.tags track by $index'
      ) {{ tag }}
    
  include ../celtic-sep.part.jade
    
  button.btn.btn-lg.btn-block.btn-default(
    ng-show = 'ownedByMe() && !isGuest()') Edit Quest
  button.btn.btn-lg.btn-block.btn-success(
    ng-show = '!ownedByMe() && !isGuest()') Accept this Quest! 
  button.btn.btn-lg.btn-block.btn-success(
    ng-show = 'isGuest()', ui-sref = 'home.signup') Sign up to accept this Quest! 
